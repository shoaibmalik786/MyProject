    <div class="control-group">
      <label class="control-label" for="inputfname">Address</label>
      <div class="controls relative_pos">
        <%#= f.text_field :address, :class => "" %>
        <input type="text" name="address_line1" class="et_input add1" >
        <input type="text" name="address_line2" class="et_input add2">
         <input type="text" name="city" class="et_input city" placeholder = 'City'>
        <%#= f.text_field :city, :class => "e_input " %>
        <%stateslist = ['AL','AK','AZ','AR','CA','CO','CT','DC','DE','FL','GA','HI','ID','IL','IN','IA','KS','KY','LA','ME','MD','MA','MI','MN','MS','MO','MT','NE','NV','NH','NJ','NM','NY','NC','ND','OH','OK','OR','PA','RI','SC','SD','TN','TX','UT','VT','VA','WA','WV','WI','WY']+['AB','BC','LB','MB','NB','NF','NS','NU','NW','ON','PE','QC','SK','YU']%>
        <a href="#" class="edit_state" onclick="$('#profile_states').toggleClass('hidedrop'); return false;"><%= @my_transaction.address.present? ? @my_transaction.address.state : 'State' %></a>
        <div class="profile_states hidedrop" id="profile_states">
          <ul>
            <%stateslist.each do |state|%>
            <li><a href="#" onclick="selectState(this); return false;"><%=state%></a></li>
            <%end%>
          </ul>
        </div>
        <input type="text" name="zipcode" class="et_input_zip" placeholder="Zipcode">
        <span class="text_under_input">We keep this info on record so that IF you choose to share it after a TradeYa you can do so with one click. Otherwise itâ€™s PRIVATE. </span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputemail">Email<sup class="star_red">*</sup></label>
      <div class="controls">
        <input type="text" name="email" id="email" class="et_input_email">
        <span class="text_under_input">This will only be shared once you have confirmed a TradeYa so they can contact you.</span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputfname">Phone Number</label>
      <div class="controls">
        <input type="text" name="phone" id="phone_number" class="et_input_phone">
      </div>
    </div>
    <input type = "hidden" name = "id" value = "<%= @my_transaction.id%>">
    <div class="control-group">
      <div class="controls save_cancel_btn next_step1">
        <input type="submit" class="edit_save" value="Next Step">
      </div>
    </div>
  </form>
  <%# end %>
