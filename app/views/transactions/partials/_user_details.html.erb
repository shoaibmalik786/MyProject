  <%#= form_for(@my_transaction, url: {action: "update_address"}, html: {method: "put", class: "form-horizontal form_step1", remote: "true"}) do |f| %>
  <form action="/transactions/update_address" method="post" data-remote="true" class="form-horizontal form_step1">
    <div class="control-group">
      <label class="control-label" for="inputfname">First Name<sup class="star_red">*</sup></label>
      <div class="controls">
