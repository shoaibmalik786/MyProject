<% if @msg %>
	<script>
		parent.document.getElementById('error_change_password').innerHTML = "<%= @msg.html_safe %>";
	</script>
<% else %>
	<script>
		parent.document.getElementById('error_change_password').innerHTML = '';
		parent.document.getElementById('user_current_password').innerHTML = '';
		parent.document.getElementById('user_new_password').innerHTML = '';
		parent.document.getElementById('user_new_password_confirmation').innerHTML = '';
		parent.cancelChangePassword();
		parent.showModal('msg_password_changed');
	</script>
<% end %>