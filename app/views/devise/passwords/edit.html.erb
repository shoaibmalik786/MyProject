<div id="pwd_header">
	<img src="https://s3.amazonaws.com/tradeya_prod/tradeya/images/pwd_asst.png" />
</div>
<div id="pwd_subheader">
	<img src="https://s3.amazonaws.com/tradeya_prod/tradeya/images/create_selected.png" />
</div>
<div id="panel">
	<div id="password_asst">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :id => 'reset_password_new' }) do |f| %>
	  <%= devise_error_messages! %>
	  <%= f.hidden_field :reset_password_token %>
	  <div id="resetpwdmessage"></div>
	  	<table id="reset_password">
	  		<tr>
	  			<td style="text-align: right;">
	  				NEW PASSWORD
	  			</td>
	  			<td></td>
	  			<td>
	  				<%= f.password_field :password, :class => "pwd_reset addborder",:id=> 'password_reset', :TABINDEX => "1", :onFocus => "clearText(this); $('#password_reset').addClass('addborder'); $('#password_reset').removeClass('removeborder')", :onBlur => "clearText(this); $('#password_reset').addClass('removeborder'); $('#password_reset').removeClass('addborder');" %>
	  			</td>
	  		</tr>
	  		<tr>
	  			<td style="text-align: right;">
	  				RE-ENTER NEW PASSWORD
	  			</td>
	  			<td></td>
	  			<td>
	  				<%= f.password_field :password_confirmation, :TABINDEX => "2",:id=> 'password_reset_confirm' ,:class => "pwdconf_textbox removeborder", :onFocus => "$('#password_reset_confirm').addClass('addborder'); $('#password_reset_confirm').removeClass('removeborder');", :onBlur => "clearText(this); $('#password_reset_confirm').addClass('removeborder'); $('#password_reset_confirm').removeClass('addborder');"%>
	  			</td>
	  		</tr>
	  		<tr>
	  			<td></td>
	  			<td></td>
	  			<td>
	  				<img src="https://s3.amazonaws.com/tradeya_prod/tradeya/images/save_pwd.png" onmouseover="this.src='https://s3.amazonaws.com/tradeya_prod/tradeya/images/save_pwd_roll.png'" onmouseout="this.src='https://s3.amazonaws.com/tradeya_prod/tradeya/images/save_pwd.png'" id="save_pwd_btn" onclick="resetPasswordForm();" />
	  			</td>
	  		</tr>
	  	</table>
	<% end %>
	</div>
</div>

