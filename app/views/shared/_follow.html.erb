<%= form_tag follow_user_path(:id => user.id,:item_id => (@item)? @item.id : nil), :id => "follow_action",  :remote => true do %>
	  <%if current_user && !current_user.follows.where(:followed_id => user.id).blank?%>
	    <%= hidden_field_tag 'follow', false%>
	    <p><a href="#" onclick="$(this).parents('#follow_action').submit();mixpanel.track('click Unfollow button on Item');_gaq.push(['_trackEvent', 'User card', 'Clk_Unflw', 'Click Unfollow on User Card']); return false;">Unfollow</a></p>
	  <%else%>
	    <%= hidden_field_tag 'follow', true%>
	    <p><a id="follow_<%= user.id%>" href = "#" onclick="followUser('<%=user.id %>',this); mixpanel.track('click Follow button on Item');_gaq.push(['_trackEvent', 'User card', 'Clk_follow', 'Click follow on User Card']); return false;">Follow</a><p>
	  <%end%>
<%end%>

