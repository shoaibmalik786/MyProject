<script>
  $(function () {
  $('#user_user_photo_photo').fileupload({
  url: '/image_preview?img_prev_id=' + 'tradeya_img_prev' + '&itemimg=usr' + "&fld_id=" + 'user_user_photo_photo' + "&user_photo_id=" + 'user_user_photo_id' + "&form_id=" + 'item_form',
