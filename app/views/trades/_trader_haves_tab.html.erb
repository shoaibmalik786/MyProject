<script>
$(document).ready(function(){
	$('.wants_container').css('width','1200px');
	$('.wants_container').css('position','relative');
	$('.wants_container').BlocksIt({
		numOfCol: 5,
		offsetX: 10,
		offsetY: 10,
		blockElement: '.user_wants_card'
	});
	$("img").one("load",function(){
		 $('.wants_container').BlocksIt({
				numOfCol: 5,
				offsetX: 10,
				offsetY: 10,
				blockElement: '.user_wants_card'
			});
	});
});
</script>
<div class="tab_content_inner">
	<div id="trader_haves_tab" class="wants_container">
		<% @trader_haves.each do |have|%>
		  <%=render 'trades/trade_page_item_card', :item => have%>
		<% end %>
	</div>
</div>

<!-- Script for draggable -->
<script>
$(document).ready(function(){
	<%if (@passive_trade.present? and !@right_item.present?) or (@trade.present? and params[:counter_offer].present?)%>
		$('#trader_haves_tab .user_wants_card').draggable({ 
			appendTo: 'body',
			scroll: true, 
			revert: true, 
			helper: "clone", 
			cursor: "move", 
			cursorAt: { top: 25, left: 25 }
		});
	<%end%>
});
</script>