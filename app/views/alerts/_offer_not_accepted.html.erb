<tr style="border-bottom: 0px; padding: 0,0,0,0;"<%= (is_first ? ' class=first_alert' : "") %>>
	<td colspan="3" style="padding: 0px;">
		<a href="<%= alert_url(alert) %>" class="alert_td_dash">
			<table width="100%">
				<tr>
					<td width="12%">
						<div class="alert_img user_image_border">
							<% if alert.is_new %>
								<div class="alert_icon" id="alert_icon_<%= alert.id %>"><img src="https://s3.amazonaws.com/tradeya_stg_2/tradeya/images/alert_icon.png" /></div>
							<% end %>
							<% if not alert.trade.offer.item_videos[0].nil? %>
								<a href="<%= alert_url(alert) %>"><div style="position:absolute;height:56px;width:72px;filter:alpha(opacity=60);-moz-opacity: 0.6;opacity: 0.6;"></div></a>
								<div id="item_video<%= alert.id %>"></div>
								<script>$(function(){videoAsRedirect('item_video<%= alert.id %>', '<%= alert.trade.offer.item_videos[0].video %>','<%= alert_url(alert) %>');});</script>
							<% else %>
								<div style="text-align: center"><img src="<%= alert.trade.offer.item_image(:small) %>" /></div>
							<% end %>
						</div>
					</td>
					<td width="65%">
						<div class="alert_title">Your Offer for TradeYa: </div>
						<div class="alert_trd_title"><%= alert.trade.item.item_title %></div>
						<div class="alert_status"> was unfortunately not accepted. Would you like to submit it as a TradeYa?</div>
					</td>
					<td width="23%"><a href="#" onclick="if (event.preventDefault) { event.preventDefault(); } else { event.returnValue = false; }; return markAlertAndRedirect(<%= ((alert.is_new) ? alert.id : 0) %>, '<%= edit_item_path(alert.trade.offer) %>');"><img src="https://s3.amazonaws.com/tradeya_stg_2/tradeya/images/sbmt_trd_alert.png" onmouseover="this.src='https://s3.amazonaws.com/tradeya_stg_2/tradeya/images/sbmt_trd_alert_roll.png'" onmouseout="this.src='https://s3.amazonaws.com/tradeya_stg_2/tradeya/images/sbmt_trd_alert.png'"></a></td>
				</tr>
			</table>
		</a>
	</td>
</tr>
